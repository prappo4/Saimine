                    <div class="profile-name" id="userName">User</div>
                    <div class="profile-badge">Free Software</div>
                </div>
            </div>
            
            <div class="balance-display">
                <div style="font-size: 18px; color: #aaa;">Main Balance</div>
                <div id="mainBalance">0 SAI</div>
            </div>
            
            <div class="me-options">
                <div class="option-card" onclick="showTokenCalculator()">
                    <h3>Token Calculator</h3>
                    <p style="color: #aaa; font-size: 14px;">1 SAI = $0.0001</p>
                </div>
                <div class="option-card" onclick="showWithdraw()">
                    <h3>Withdraw</h3>
                    <p style="color: #aaa; font-size: 14px;">Withdraw your earnings</p>
                </div>
                <div class="option-card" onclick="showHistory()">
                    <h3>History</h3>
                    <p style="color: #aaa; font-size: 14px;">Transaction history</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="nav-container">
        <nav class="nav">
            <div class="nav-item active" onclick="showPage('mine')">
                <div class="nav-icon">⛏️</div>
                <div class="nav-text">Mine</div>
            </div>
            <div class="nav-item" onclick="showPage('leaderboard')">
                <div class="nav-icon">🏆</div>
                <div class="nav-text">Leaderboard</div>
            </div>
            <div class="nav-item" onclick="showPage('team')">
                <div class="nav-icon">👥</div>
                <div class="nav-text">Team</div>
            </div>
            <div class="nav-item" onclick="showPage('me')">
                <div class="nav-icon">👤</div>
                <div class="nav-text">Me</div>
            </div>
        </nav>
    </div>

    <!-- Modals -->
    <div class="modal" id="tokenCalculatorModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal('tokenCalculatorModal')">×</button>
            <div class="modal-header">Token Calculator</div>
            <div class="input-group">
                <label class="input-label">SAI Amount</label>
                <input type="number" class="input-field" id="saiAmount" placeholder="Enter SAI amount" oninput="calculateUSD()">
            </div>
            <div class="input-group">
                <label class="input-label">USD Value</label>
                <input type="text" class="input-field" id="usdValue" readonly>
            </div>
            <div style="text-align: center; margin-top: 20px; color: #aaa;">
                1 SAI = $0.0001
            </div>
        </div>
    </div>

    <div class="modal" id="withdrawModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal('withdrawModal')">×</button>
            <div class="modal-header">Withdraw</div>
            <div style="margin-bottom: 20px; color: #aaa;">
                Available Assets: <span id="availableAssets">0 SAI</span>
            </div>
            <div class="input-group">
                <label class="input-label">Select Network</label>
                <select class="input-field" id="networkSelect" onchange="updateWithdrawLimits()">
                    <option value="bep20">BEP-20 USDT</option>
                    <option value="trc20">TRC-20 USDT</option>
                </select>
            </div>
            <div style="margin-bottom: 20px; font-size: 14px; color: #aaa;" id="withdrawLimits">
                Min: 1200 SAI | Max: 120,000 SAI
            </div>
            <div class="input-group">
                <label class="input-label">Withdrawal Address</label>
                <input type="text" class="input-field" id="withdrawAddress" placeholder="Enter wallet address">
            </div>
            <div class="input-group">
                <label class="input-label">Amount (SAI)</label>
                <input type="number" class="input-field" id="withdrawAmount" placeholder="Enter amount">
            </div>
            <button class="btn" onclick="confirmWithdraw()">Confirm</button>
        </div>
    </div>

    <div class="modal" id="historyModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal('historyModal')">×</button>
            <div class="modal-header">Transaction History</div>
            <div id="historyList">
                <!-- History items will be populated here -->
            </div>
        </div>
    </div>

    <script>
        // Global Variables
        let currentPage = 'mine';
        let isMining = false;
        let miningInterval = null;
        let tokenBalance = 0;
        let minedTokens = 0;
        let miningStartTime = null;
        let miningDuration = 2 * 60 * 60 * 1000; // 2 hours in milliseconds
        
        let dailyTasks = {
            signIn: false,
            booster: 0,
            powerSupply: 0,
            extremeMining: 0,
            lastReset: new Date().toDateString()
        };

        let userData = {
            id: 'user123',
            name: 'Telegram User',
            avatar: 'U',
            balance: 0,
            teamMembers: 0,
            commission: 0,
            spinChances: 0,
            referrals: [],
            history: []
        };

        // Initialize App
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            loadUserData();
            updateUI();
            initializeLeaderboard();
            checkDailyReset();
            
            // Check if mining was in progress
            const savedMining = localStorage.getItem('miningInProgress');
            if (savedMining) {
                const miningData = JSON.parse(savedMining);
                const now = Date.now();
                if (now - miningData.startTime < miningDuration) {
                    resumeMining(miningData);
                } else {
                    completeMining();
                }
            }
        });

        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 10 + 's';
                particle.style.animationDuration = (10 + Math.random() * 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Navigation
        function showPage(page) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            
            document.getElementById(page + '-page').classList.add('active');
            event.currentTarget.classList.add('active');
            
            currentPage = page;
            
            if (page === 'leaderboard') {
                updateLeaderboard();
            }
        }

        // Mining Functions
        document.getElementById('startMiningBtn').addEventListener('click', function() {
            if (!isMining) {
                showAd('gigapub', () => {
                    startMining();
                });
            }
        });

        function startMining() {
            isMining = true;
            miningStartTime = Date.now();
            minedTokens = 0;
            
            document.getElementById('startMiningBtn').textContent = 'Mining in Progress...';
            document.getElementById('startMiningBtn').disabled = true;
            document.getElementById('miningGif').classList.remove('paused');
            
            // Save mining state
            localStorage.setItem('miningInProgress', JSON.stringify({
                startTime: miningStartTime,
                initialBalance: userData.balance
            }));
            
            // Start token counter
            let lastUpdate = Date.now();
            miningInterval = setInterval(() => {
                const now = Date.now();
                const elapsed = now - lastUpdate;
                const tokensPerSecond = 0.0056;
                const newTokens = (elapsed / 1000) * tokensPerSecond;
                
                minedTokens += newTokens;
                userData.balance += newTokens;
                
                updateTokenCounter();
                updateBalance();
                
                lastUpdate = now;
                
                // Check if 2 hours have passed
                if (now - miningStartTime >= miningDuration) {
                    completeMining();
                }
            }, 100);
            
            showMessage('Mining started! You will earn 0.0056 SAI per second for 2 hours.', 'success');
        }

        function completeMining() {
            isMining = false;
            clearInterval(miningInterval);
            
            // Add mined tokens to balance
            userData.balance += minedTokens;
            
            // Save to history
            addToHistory('Mining', minedTokens, 'Completed 2-hour mining session');
            
            // Reset UI
            document.getElementById('startMiningBtn').textContent = 'Start Mining';
            document.getElementById('startMiningBtn').disabled = false;
            document.getElementById('miningGif').classList.add('paused');
            
            localStorage.removeItem('miningInProgress');
            
            showMessage(`Mining completed! You earned ${minedTokens.toFixed(4)} SAI`, 'success');
            
            minedTokens = 0;
            updateTokenCounter();
            updateBalance();
            saveUserData();
        }

        function resumeMining(miningData) {
            const elapsed = Date.now() - miningData.startTime;
            const remaining = miningDuration - elapsed;
            
            if (remaining > 0) {
                isMining = true;
                miningStartTime = miningData.startTime;
                
                document.getElementById('startMiningBtn').textContent = 'Mining in Progress...';
                document.getElementById('startMiningBtn').disabled = true;
                document.getElementById('miningGif').classList.remove('paused');
                
                miningInterval = setInterval(() => {
                    const now = Date.now();
                    const tokensPerSecond = 0.0056;
                    const newTokens = tokensPerSecond * 0.1; // Update every 100ms
                    
                    minedTokens += newTokens;
                    userData.balance += newTokens;
                    
                    updateTokenCounter();
                    updateBalance();
                    
                    if (now - miningStartTime >= miningDuration) {
                        completeMining();
                    }
                }, 100);
            }
        }

        function updateTokenCounter() {
            const totalTokens = minedTokens;
            document.getElementById('tokenCounter').textContent = totalTokens.toFixed(4) + ' SAI';
        }

        // Task Functions
        document.getElementById('regularTaskBtn').addEventListener('click', function() {
            showPage('tasks');
        });

        function openTask(platform) {
            switch(platform) {
                case 'telegram':
                    window.open('https://t.me/SAIcommunity', '_blank');
                    setTimeout(() => {
                        if (confirm('Have you joined the SAI Community?')) {
                            completeTask('telegram', 50);
                        }
                    }, 5000);
                    break;
            }
        }

        function dailySignIn() {
            if (dailyTasks.signIn) {
                showMessage('You have already completed daily sign in!', 'error');
                return;
            }
            
            showAd('adradar', () => {
                userData.balance += 20;
                dailyTasks.signIn = true;
                addToHistory('Task', 20, 'Daily Sign In');
                updateBalance();
                saveUserData();
                showMessage('Congratulations! You received 20 SAI', 'success');
            });
        }

        function dailyBooster() {
            if (dailyTasks.booster >= 3) {
                showMessage('Maximum attempts reached for today!', 'error');
                return;
            }
            
            const lastBooster = localStorage.getItem('lastBooster');
            if (lastBooster && Date.now() - parseInt(lastBooster) < 60000) {
                showMessage('Wait 1 minute between attempts!', 'error');
                return;
            }
            
            showAd('tads', () => {
                userData.balance += 10;
                dailyTasks.booster++;
                localStorage.setItem('lastBooster', Date.now().toString());
                addToHistory('Task', 10, 'Daily Booster');
                updateBalance();
                saveUserData();
                showMessage('Congratulations! You received 10 SAI', 'success');
            });
        }

        function powerSupply() {
            if (dailyTasks.powerSupply >= 3) {
                showMessage('Maximum attempts reached for today!', 'error');
                return;
            }
            
            showAd('oneclicka', () => {
                userData.balance += 10;
                dailyTasks.powerSupply++;
                addToHistory('Task', 10, 'Power Supply');
                updateBalance();
                saveUserData();
                showMessage('Congratulations! You received 10 SAI', 'success');
            });
        }

        function extremeMining() {
            if (dailyTasks.extremeMining >= 3) {
                showMessage('Maximum attempts reached for today!', 'error');
                return;
            }
            
            showAd('adextra', () => {
                userData.balance += 10;
                dailyTasks.extremeMining++;
                addToHistory('Task', 10, 'Extreme Mining');
                updateBalance();
                saveUserData();
                showMessage('Congratulations! You received 10 SAI', 'success');
            });
        }

        function completeTask(taskType, reward) {
            userData.balance += reward;
            addToHistory('Task', reward, 'Joined SAI Community');
            updateBalance();
            saveUserData();
            showMessage(`Congratulations! You received ${reward} SAI`, 'success');
        }

        // Spin Functions
        document.getElementById('megaSpinBtn').addEventListener('click', function() {
            showPage('spin');
        });

        function spinNow() {
            if (userData.spinChances <= 0) {
                showMessage('You need to invite a friend who completes all tasks to unlock a spin!', 'error');
                return;
            }
            
            const spinBtn = document.getElementById('spinNowBtn');
            spinBtn.disabled = true;
            
            const wheel = document.getElementById('spinWheel');
            wheel.classList.add('spinning');
            
            setTimeout(() => {
                wheel.classList.remove('spinning');
                userData.spinChances--;
                
                // Always give 100 tokens
                userData.balance += 100;
                addToHistory('Spin', 100, 'Mega Spin');
                updateBalance();
                saveUserData();
                
                showMessage('Congratulations! You received 100 SAI', 'success');
                spinBtn.disabled = false;
            }, 3000);
        }

        // Team Functions
        function copyInviteLink() {
            const link = document.getElementById('inviteLink');
            link.select();
            document.execCommand('copy');
            showMessage('Invite link copied to clipboard!', 'success');
        }

        function shareToSocial(platform) {
            const link = document.getElementById('inviteLink').value;
            const text = 'Join me in SAI Mining and earn crypto together!';
            
            const urls = {
                facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(link)}`,
                telegram: `https://t.me/share/url?url=${encodeURIComponent(link)}&text=${encodeURIComponent(text)}`,
                twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(link)}`,
                linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(link)}`,
                whatsapp: `https://wa.me/?text=${encodeURIComponent(text + ' ' + link)}`
            };
            
            if (urls[platform]) {
                window.open(urls[platform], '_blank');
            }
        }

        function shareFriends() {
            if (navigator.share) {
                navigator.share({
                    title: 'SAI Mining',
                    text: 'Join me in SAI Mining and earn crypto together!',
                    url: document.getElementById('inviteLink').value
                });
            } else {
                copyInviteLink();
            }
        }

        // Me Page Functions
        function showTokenCalculator() {
            document.getElementById('tokenCalculatorModal').style.display = 'block';
        }

        function showWithdraw() {
            document.getElementById('availableAssets').textContent = userData.balance.toFixed(2) + ' SAI';
            document.getElementById('withdrawModal').style.display = 'block';
        }

        function showHistory() {
            displayHistory();
            document.getElementById('historyModal').style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function calculateUSD() {
            const saiAmount = parseFloat(document.getElementById('saiAmount').value) || 0;
            const usdValue = saiAmount * 0.0001;
            document.getElementById('usdValue').value = '$' + usdValue.toFixed(4);
        }

        function updateWithdrawLimits() {
            const network = document.getElementById('networkSelect').value;
            const limitsDiv = document.getElementById('withdrawLimits');
            
            if (network === 'bep20') {
                limitsDiv.textContent = 'Min: 1200 SAI | Max: 120,000 SAI';
            } else {
                limitsDiv.textContent = 'Min: 12,000 SAI | Max: 1,200,000 SAI';
            }
        }

        function confirmWithdraw() {
            const network = document.getElementById('networkSelect').value;
            const address = document.getElementById('withdrawAddress').value;
            const amount = parseFloat(document.getElementById('withdrawAmount').value);
            
            if (!address) {
                showMessage('Please enter a withdrawal address!', 'error');
                return;
            }
            
            if (!amount || amount <= 0) {
                showMessage('Please enter a valid amount!', 'error');
                return;
            }
            
            const minAmount = network === 'bep20' ? 1200 : 12000;
            const maxAmount = network === 'bep20' ? 120000 : 1200000;
            
            if (amount < minAmount) {
                showMessage(`Minimum withdrawal is ${minAmount} SAI!`, 'error');
                return;
            }
            
            if (amount > maxAmount) {
                showMessage(`Maximum withdrawal is ${maxAmount} SAI!`, 'error');
                return;
            }
            
            if (amount > userData.balance) {
                showMessage('Insufficient balance!', 'error');
                return;
            }
            
            // Process withdrawal
            userData.balance -= amount;
            addToHistory('Withdrawal', -amount, `Withdrawal to ${network.toUpperCase()}`);
            updateBalance();
            saveUserData();
            
            closeModal('withdrawModal');
            showMessage('Withdraw successful! You will receive payment within 1-3 working days.', 'success');
        }

        // Leaderboard Functions
        function initializeLeaderboard() {
            const mockUsers = [
                { rank: 1, name: 'CryptoKing', avatar: 'C', balance: 125000 },
                { rank: 2, name: 'MinerPro', avatar: 'M', balance: 98000 },
                { rank: 3, name: 'TokenMaster', avatar: 'T', balance: 87000 },
                { rank: 4, name: 'SAIHunter', avatar: 'S', balance: 76000 },
                { rank: 5, name: 'CryptoQueen', avatar: 'Q', balance: 65000 },
                { rank: 6, name: 'BlockchainBud', avatar: 'B', balance: 54000 },
                { rank: 7, name: 'TokenCollector', avatar: 'C', balance: 43000 },
                { rank: 8, name: 'MiningExpert', avatar: 'E', balance: 32000 },
                { rank: 9, name: 'CryptoNinja', avatar: 'N', balance: 21000 },
                { rank: 10, name: userData.name, avatar: userData.avatar, balance: userData.balance }
            ];
            
            localStorage.setItem('leaderboard', JSON.stringify(mockUsers));
        }

        function updateLeaderboard() {
            const leaderboard = JSON.parse(localStorage.getItem('leaderboard') || '[]');
            const currentUser = { rank: 0, name: userData.name, avatar: userData.avatar, balance: userData.balance };
            
            // Update current user in leaderboard
            const userIndex = leaderboard.findIndex(u => u.name === userData.name);
            if (userIndex >= 0) {
                leaderboard[userIndex].balance = userData.balance;
            } else {
                leaderboard.push(currentUser);
            }
            
            // Sort by balance
            leaderboard.sort((a, b) => b.balance - a.balance);
            
            // Update ranks
            leaderboard.forEach((user, index) => {
                user.rank = index + 1;
            });
            
            const leaderboardList = document.getElementById('leaderboardList');
            leaderboardList.innerHTML = '';
            
            // Show top 100
            leaderboard.slice(0, 100).forEach(user => {
                const item = document.createElement('div');
                item.className = 'leaderboard-item';
                item.innerHTML = `
                    <div class="rank-number ${user.rank <= 3 ? 'rank-' + user.rank : ''}">#${user.rank}</div>
                    <div class="user-info">
                        <div class="user-avatar">${user.avatar}</div>
                        <div class="user-details">
                            <div class="user-name">${user.name}</div>
                            <div class="user-balance">${user.balance.toLocaleString()} SAI</div>
                        </div>
                    </div>
                `;
                leaderboardList.appendChild(item);
            });
        }

        // History Functions
        function addToHistory(type, amount, description) {
            const historyItem = {
                date: new Date().toLocaleString(),
                type: type,
                amount: amount,
                description: description
            };
            
            userData.history.unshift(historyItem);
            if (userData.history.length > 100) {
                userData.history = userData.history.slice(0, 100);
            }
        }

        function displayHistory() {
            const historyList = document.getElementById('historyList');
            historyList.innerHTML = '';
            
            if (userData.history.length === 0) {
                historyList.innerHTML = '<div style="text-align: center; color: #aaa; padding: 20px;">No transactions yet</div>';
                return;
            }
            
            userData.history.forEach(item => {
                const historyDiv = document.createElement('div');
                historyDiv.className = 'history-item';
                historyDiv.innerHTML = `
                    <div class="history-date">${item.date}</div>
                    <div>
                        <span class="history-type">${item.type}</span>
                        <span class="history-amount" style="color: ${item.amount >= 0 ? '#22c55e' : '#ef4444'}">
                            ${item.amount >= 0 ? '+' : ''}${item.amount.toFixed(4)} SAI
                        </span>
                        <div style="clear: both; color: #aaa; font-size: 12px; margin-top: 5px;">${item.description}</div>
                    </div>
                `;
                historyList.appendChild(historyDiv);
            });
        }

        // Utility Functions
        function showAd(network, callback) {
            // Simulate ad display
            const adNetworks = {
                'gigapub': 'GigaPub Network',
                'adradar': 'AdRadar Network',
                'tads': 'TAds.me Network',
                'oneclicka': 'OneClicka Network',
                'adextra': 'AdExtra Network'
            };
            
            showMessage(`Loading ${adNetworks[network]} advertisement...`, 'success');
            
            setTimeout(() => {
                showMessage('Ad completed!', 'success');
                if (callback) callback();
            }, 2000 + Math.random() * 2000);
        }

        function showMessage(text, type) {
            const message = document.createElement('div');
            message.className = `message ${type}`;
            message.textContent = text;
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.remove();
            }, 3000);
        }

        function updateBalance() {
            document.getElementById('mainBalance').textContent = userData.balance.toFixed(2) + ' SAI';
            document.getElementById('teamMembers').textContent = userData.referrals.length;
            document.getElementById('totalCommission').textContent = userData.commission.toFixed(2);
        }

        function updateUI() {
            document.getElementById('userName').textContent = userData.name;
            document.getElementById('userAvatar').textContent = userData.avatar;
            updateBalance();
        }

        function saveUserData() {
            localStorage.setItem('userData', JSON.stringify(userData));
            localStorage.setItem('dailyTasks', JSON.stringify(dailyTasks));
        }

        function loadUserData() {
            const saved = localStorage.getItem('userData');
            if (saved) {
                userData = JSON.parse(saved);
            }
            
            const savedTasks = localStorage.getItem('dailyTasks');
            if (savedTasks) {
                dailyTasks = JSON.parse(savedTasks);
            }
        }

        function checkDailyReset() {
            const today = new Date().toDateString();
            if (dailyTasks.lastReset !== today) {
                dailyTasks = {
                    signIn: false,
                    booster: 0,
                    powerSupply: 0,
                    extremeMining: 0,
                    lastReset: today
                };
                saveUserData();
            }
        }

        // Check for skipped tasks penalty
        setInterval(() => {
            const hour = new Date().getHours();
            if (hour === 23) { // Check at 11 PM
                const tasksCompleted = dailyTasks.signIn + dailyTasks.booster + dailyTasks.powerSupply + dailyTasks.extremeMining;
                if (tasksCompleted === 0 && userData.balance >= 200) {
                    userData.balance -= 200;
                    addToHistory('Penalty', -200, 'Skipped all daily tasks');
                    updateBalance();
                    saveUserData();
                    showMessage('200 SAI deducted for skipping all daily tasks!', 'error');
                }
            }
        }, 3600000); // Check every hour

        // Simulate referral data
        if (userData.referrals.length === 0 && Math.random() > 0.5) {
            userData.referrals = [
                { id: 'ref1', name: 'Friend1', completedTasks: true },
                { id: 'ref2', name: 'Friend2', completedTasks: false }
            ];
            userData.teamMembers = userData.referrals.length;
            userData.spinChances = userData.referrals.filter(r => r.completedTasks).length;
            userData.balance += userData.referrals.length * 100; // Invite bonus
            saveUserData();
        }

        // Close modals on outside click
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        };
    </script>
</body>
</html>
